<?xml version="1.0" encoding="utf-8"?>
<com.jonkoester.junkdrawer.HelperOverlay xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/view_helper_overlay_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Title Text"
        android:textSize="36sp" />

    <TextView
        android:id="@+id/view_helper_overlay_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Message Text"
        android:textSize="28sp" />

</com.jonkoester.junkdrawer.HelperOverlay>